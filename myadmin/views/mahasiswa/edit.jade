extends ../layout/base
block content
    section.content-header
        h1
            | Edit Mahasiswa
            small menu for editing mahasiswa data
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Mahasiswa
            .box-tools.pull-right
                button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                    i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/mahasiswa/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alertdismissable
                                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | Nomor Induk Mahasiwa
                                    input(type='text',name='nim',value="#{data.nim}", autofocus).form-control
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value="#{ (nama == undefined) ? data.nama : nama }",name='nama').form-control
                                .form-group
                                    label
                                        | Tempat Lahir
                                    input(type='text',name='tmptlhr', value="#{ (tmpt_lahir == undefined) ? data.tmpt_lahir : tmpt_lahir }").form-control
                                .form-group
                                    label
                                        | Tanggal Lahir
                                    input(type='text',name='tgllhr', value="#{ (tgl_lahir == undefined) ? data.tgl_lahir : tgl_lahir }").form-control
                                .form-group
                                    label
                                        | Jenis Kelamin
                                    input(type='text',name='jk', value="#{ (jenis_kelamin == undefined) ? data.jenis_kelamin : jenis_kelamin }").form-control
                                .form-group
                                    label
                                        | Alamat
                                    input(type='text',name='alamat', value="#{ (alamat == undefined) ? data.alamat : alamat }").form-control
                                .form-group
                                    label
                                        | Jurusan
                                    input(type='text',name='jurusan',value="#{ (jurusan == undefined) ? data.jurusan : jurusan }").form-control
                                .form-group
                                    label
                                        | Kelas
                                    input(type='text',name='kelas',value="#{ (kelas == undefined) ? data.kelas : kelas }").form-control
                                .form-group
                                    label
                                        | Semester
                                    input(type='text',name='semester',value="#{ (semester == undefined) ? data.semester : semester }").form-control
                                .form-group
                                    label
                                        | Keterangan
                                    input(type='text',name='ket',value="#{ (ket == undefined) ? data.ket : ket }").form-control
                            .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/mahasiswa').btn.btn-primary.pullright
                                    | Back