extends ../layout/base
block content
    section.content-header
    h1
        | Mahasiswa 
        small it all starts here
    ol.breadcrumb
        li
            a(href='#')
                i.fa.fa-dashboard
                | Level
        li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Mahasiswa
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', datatoggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                - if(messages.msg_info)
                    .alert.alert-success.alert-dismissable
                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                            | ×
                        h4
                            i.icon.fa.fa-check
                            | Success!
                        | !{messages.msg_info}
                - if(messages.msg_error)
                    .alert.alert-danger.alert-dismissable
                        button.close(type='button', datadismiss='alert', aria-hidden='true')
                            | ×
                        h4
                            i.icon.fa.fa-ban
                            | Alert!
                        | !{messages.msg_error}
                a(href='mahasiswa/add').pull-left.btn.btn-primary
                    i.fa.fa-plus
                    | Add Mahasiswa
                .data-table
                    table.table.table-bordered
                        tr
                            th
                                | No
                            th
                                | NIM
                            th
                                | Nama 
                            th
                                | Tempat Lahir
                            th
                                | Tanggal Lahir
                            th
                                | Jenis Kelamin
                            th
                                | Alamat
                            th
                                | Jurusan
                            th
                                | Kelas
                            th
                                | Semester
                            th
                                | Keterangan
                            th
                                | Action
                            if messages.msg_error
                                | !{messages.msg_error}
                            else
                                for row, index in data
                                    tr
                                        td #{index+1}
                                        td #{row.nim}
                                        td #{row.nama}
                                        td #{row.tmpt_lahir}
                                        td #{row.tgl_lahir}
                                        td #{row.jenis_kelamin}
                                        td #{row.alamat}
                                        td #{row.jurusan}
                                        td #{row.kelas}
                                        td #{row.semester}
                                        td #{row.ket}
                                        td
                                            div(style='display:inlineblock')
                                                a(href='/mahasiswa/edit/#{row.id}').btn.btn-sm.btn-primary
                                                    i.fa.fa-edit
                                            
                                            div(style='display:inlineblock')
                                                form(method='post', action='/mahasiswa/delete/#{row.id}')
                                                    input(type="hidden",name="_method", value="DELETE")
                                                    button.btn.btn-sm.btn-danger(type='submit')
                                                        i.fa.fa-remov